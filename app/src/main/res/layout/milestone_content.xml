<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/button_outline_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/milestone_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/milestone_party_popper" />

        <TextView
            android:id="@+id/milestone_number"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:text="@string/zero_counter_text"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/milestone_text"
            android:layout_width="219dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:text="@string/users_have_checked_into_your_event_text"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>