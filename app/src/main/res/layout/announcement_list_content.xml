<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/announcements_content_border"
        android:layout_width="386dp"
        android:layout_height="113dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_outline_grey"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/announcements_content_name"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Announcement"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/announcements_content_about"
            android:layout_width="371dp"
            android:layout_height="78dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="314dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Announcement Content" />
    </LinearLayout>


    <TextView
        android:id="@+id/announcements_content_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Organizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcements_content_border" />

    <TextView
        android:id="@+id/announcements_content_time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Xm ago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcements_content_border" />

</androidx.constraintlayout.widget.ConstraintLayout>