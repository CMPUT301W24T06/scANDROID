<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/browse_announcement_list"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:longClickable="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loading_announcements_text"
                android:layout_width="152dp"
                android:layout_height="44dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical|end"
                android:text="Loading. . ."
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toStartOf="@+id/browse_announcements_previous_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/browse_announcements_next_button"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rectangle_button"
                android:fontFamily="@font/poppins_bold"
                android:text="Next"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/browse_announcements_previous_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/browse_announcements_next_button"
                android:background="@drawable/rectangle_button"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Previous"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/browse_announcements_next_button"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>
